<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_87"/>
    <!--Tool Bar-->
    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/snippet_top_edit_profile_toolbar"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_below="@id/relLayout1"
        android:layout_centerHorizontal="true"
        android:id="@+id/profilePhotoSection"
        android:layout_width="130dp"
        android:layout_height="135dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePhoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/burger1"
            />

        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            app:cardCornerRadius="45dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_height="40dp"

            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                app:tint="@color/dark50"
                android:src="@drawable/ic_baseline_camera_alt_24"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout

        android:layout_marginTop="40dp"
        android:layout_below="@id/profilePhotoSection"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Username"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <EditText
                    android:id="@+id/usernameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:text="Demo Text"
                    android:background="#00000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!--Email-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Email"
            android:fontFamily="@font/poppins"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="11dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <TextView
                    android:id="@+id/emailinput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:text="aumaidkh96@gmail.com"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <!--Phone Number-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:text="Phone Number"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                >

                <TextView
                    android:id="@+id/phoneInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginStart="30dp"
                    android:text="+918825098537"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <!--Bio Number-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:text="About"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="11dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
               >

                <EditText
                    android:id="@+id/aboutInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_marginStart="30dp"
                    android:text="This is description of the foodies"
                    android:textSize="16sp"
                    android:background="#00000000"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <ProgressBar
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bg"
        android:background="@drawable/progress_bar_background"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:id="@+id/saveChangesButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/orange"
        android:src="@drawable/ic_save_changes"
        app:tint="@color/white"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>