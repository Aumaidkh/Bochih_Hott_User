<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/successIcon"
        android:src="@drawable/ic_green_check_mark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/successMessageText"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/successIcon"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:text="Order placed Successfully with order Id"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderIdTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:textColor="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/successMessageText"
        android:text="Order Id: #aldafknackdnlae234r"/>

    <com.google.android.material.button.MaterialButton
        android:layout_centerHorizontal="true"
        android:id="@+id/trackOrderBtn"
        android:text="Track Order"
        android:textAllCaps="false"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:alpha="0"
        android:scaleX="0"
        android:scaleY="0"
        android:layout_below="@id/orderIdTv"
        android:fontFamily="@font/poppins"
        android:layout_width="160dp"
        android:elevation="8dp"
        android:layout_height="60dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:background="@drawable/progress_bar_background"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pleaseWaitText"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progressBar"
        android:text="Please wait while your order is being confirmed"/>



</RelativeLayout>