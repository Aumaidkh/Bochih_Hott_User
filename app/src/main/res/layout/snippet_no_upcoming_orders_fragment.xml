<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--No UpComing Order Illustration-->
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_todo"
            android:layout_width="250dp"
            android:layout_height="300dp"/>

        <!--No Upcoming Orders-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Upcoming Orders"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sofiia_regular"/>

        <!--No Upcoming Orders Body-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_marginTop="10dp"
            android:layout_width="260dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="No Upcoming Orders You have placed yet Order and Discover Now"
            android:textSize="16sp"
            android:lineHeight="18dp"
            android:textColor="#B5B5B5"
            android:fontFamily="@font/sofiia_regular"/>


        <!--Discover Now Button-->
        <com.google.android.material.button.MaterialButton
            android:layout_centerInParent="true"
            android:layout_margin="40dp"
            app:cornerRadius="40dp"
            android:backgroundTint="#F87720"
            android:layout_width="match_parent"
            android:text="Discover Now"
            android:textAllCaps="true"
            android:fontFamily="@font/sofiia_regular"
            android:layout_height="80dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>