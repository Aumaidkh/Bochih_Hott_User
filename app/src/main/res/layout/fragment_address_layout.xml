<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:id="@+id/rellayout1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <include layout="@layout/snippet_address_fragment_toolbar"/>

       </RelativeLayout>

       <!--Helper Section-->
       <RelativeLayout
           android:paddingStart="25dp"
           android:paddingEnd="25dp"
           android:id="@+id/rellayout2"
           android:layout_below="@id/rellayout1"
           android:layout_width="match_parent"
           android:layout_height="150dp">

           <include layout="@layout/layout_center_address_fragment"/>

       </RelativeLayout>

       <!--Address Fields Layout-->
       <RelativeLayout
           android:id="@+id/rellayout3"
           android:layout_below="@id/rellayout2"
           android:layout_width="match_parent"
           android:paddingStart="35dp"
           android:paddingEnd="35dp"
           android:layout_height="wrap_content">

           <include layout="@layout/layout_address_fields"/>

       </RelativeLayout>

       <!--Proceed Section-->
       <RelativeLayout
           android:layout_marginTop="180dp"
           android:layout_below="@id/rellayout3"
           android:layout_width="match_parent"
           android:paddingStart="50dp"
           android:paddingEnd="50dp"
           android:layout_height="wrap_content">

            <include layout="@layout/snippet_proceed_section_layout"/>

       </RelativeLayout>

   </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>