<RelativeLayout android:id="@+id/drawerLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="80dp"
    android:background="@drawable/navbar_background"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawerProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/burger1"/>

        <!--User Name-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drawerUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Murtaza Khursheed"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofiia_regular"
            android:textColor="@color/dark"
            android:textSize="20sp"/>

        <!--Email -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drawerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aumaid@gmail.com"
            android:fontFamily="@font/sofiia_regular"
            android:textColor="@color/white"
            android:textSize="14sp"/>


    </LinearLayout>

</RelativeLayout>