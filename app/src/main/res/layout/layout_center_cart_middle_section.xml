<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:padding="20dp"
            android:id="@+id/cartItemsLv"
            android:layout_width="match_parent"
            android:divider="@color/white"
            android:dividerHeight="4dp"
            android:layout_height="wrap_content">

        </ListView>

        <RelativeLayout
            android:id="@+id/totalSection"
            android:layout_below="@id/cartItemsLv"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <include layout="@layout/snippet_order_total_layout"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/totalSection"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <include layout="@layout/snippet_cart_buttons_layout"/>


        </RelativeLayout>



    </LinearLayout>

</merge>